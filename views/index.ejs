<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlogSpace</title>
    <style>
      body {
        font-family: system-ui, -apple-system, sans-serif;
        margin: 0;
        padding: 0;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        border-bottom: 1px solid #eee;
      }

      .logo {
        font-size: 1.25rem;
        font-weight: 600;
        color: #111;
        text-decoration: none;
      }

      .auth-buttons {
        display: flex;
        gap: 1rem;
      }

      .btn {
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
      }

      .btn-primary {
        background-color: #0f172a;
        color: white;
        border: none;
      }

      .btn-secondary {
        background: none;
        border: none;
        color: #111;
      }

      .container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
      }

      .post-card {
        border: 1px solid #eee;
        border-radius: 0.5rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
      }

      .post-title {
        font-size: 1.5rem;
        margin: 0 0 0.5rem 0;
        color: #111;
      }

      .post-meta {
        color: #666;
        font-size: 0.875rem;
        margin-bottom: 1rem;
      }

      .post-excerpt {
        color: #4b5563;
        margin-bottom: 1rem;
        line-height: 1.5;
      }

      .post-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .post-stats {
        display: flex;
        gap: 1rem;
        color: #666;
        font-size: 0.875rem;
      }

      .read-more {
        color: #111;
        text-decoration: none;
        font-weight: 500;
      }
    </style>
  </head>
  <body>
    <header class="header">
        <a href="/" class="logo">BlogSpace</a>
        <div class="auth-buttons">
            <% if (user) { %>
                <span>Welcome, <%= user.name %>!</span>
                <a href="/posts/create" class="btn btn-primary">Post Blog</a>
                <form action="/api/logout" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-secondary">Log Out</button>
                </form>
            <% } else { %>
                <a href="signin" class="btn btn-secondary">Sign In</a>
                <a href="register" class="btn btn-primary">Sign Up</a>
            <% } %>
        </div>
    </header>

    <main class="container">
      <% posts.forEach(post => { %>
      <article class="post-card">
        <h2 class="post-title"><%= post.title %></h2>
        <div class="post-meta">
          By <%= post.author.author %> ¬∑ <%= post.createdAt.toDateString() %>
        </div>
        <p class="post-excerpt"><%= post.content %></p>
        <div class="post-footer">
          <div class="post-stats">
            <span>‚ù§Ô∏è <%= post.likes %></span>
            <span>üí¨ <%= post.comments %></span>
          </div>
          <% if (!post.active) { %>
          <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT" />
            <button type="submit">Activate</button>
          </form>
          <% } %>
        </div>
      </article>
      <% }); %>
    </main>
  </body>
</html>
